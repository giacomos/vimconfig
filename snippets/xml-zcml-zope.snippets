	    ${2:interface="${3}"}
	    ${4:type="${5}"}
	    ${6:name="${7}"}
	    />

# GenericSetupimportstep
snippet <import GenericSetupimportstep
	<genericsetup:importStep
	    name="$1"
	    title="$2"
	    ${3:description="$4"}
	    handler="$5">
	  ${7:<depends name="$8"/>}
	</genericsetup:importStep>
	

